{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5", "ES6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
